{
  "name": "hamlet-framework/db",
  "type": "framework",
  "description": "Hamlet Framework / DB",
  "keywords": ["framework", "orm", "database"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "require": {
    "php": "^7 || ^8",
    "ext-json": "@stable",
    "hamlet-framework/type": ">= 0.2.0",
    "psr/log": "@stable"
  },
  "require-dev": {
    "monolog/monolog": "@stable",
    "phake/phake": "@stable",
    "php-parallel-lint/php-parallel-lint": "@stable",
    "phpunit/phpunit": "^6 || ^7 || ^8",
    "squizlabs/php_codesniffer": "@stable",
    "vimeo/psalm": "@stable",
    "symfony/polyfill-mbstring": "<=1.20.0"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Database\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Database\\": "tests"
    }
  }
}
