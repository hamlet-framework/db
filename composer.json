{
  "name": "hamlet-framework/db",
  "type": "framework",
  "description": "Hamlet Framework / DB",
  "keywords": ["framework", "orm", "database"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "require": {
    "php": "^7",
    "ext-json": "@stable",
    "hamlet-framework/type": "dev-master",
    "psr/log": "@stable"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "@stable",
    "monolog/monolog": "@stable",
    "phake/phake": "@stable",
    "phpunit/phpunit": "^6 || ^7",
    "squizlabs/php_codesniffer": "@stable",
    "vimeo/psalm": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Database\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Database\\": "tests"
    }
  }
}
